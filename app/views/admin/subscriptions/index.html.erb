<!-- app/views/admin/subscriptions/index.html.erb -->
<div class="max-w-6xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6">Subscription Management</h1>

  <div class="mb-6 bg-blue-100 p-4 rounded">
    <div class="flex items-center">
      <div class="mr-4">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <p class="font-semibold text-blue-800">Overview</p>
        <p class="text-sm text-blue-700">Manage all user subscriptions from this dashboard.</p>
      </div>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white">
      <thead>
      <tr class="bg-gray-200 text-gray-700 uppercase text-sm leading-normal">
        <th class="py-3 px-6 text-left">ID</th>
        <th class="py-3 px-6 text-left">User</th>
        <th class="py-3 px-6 text-left">Plan</th>
        <th class="py-3 px-6 text-left">Status</th>
        <th class="py-3 px-6 text-left">Started</th>
        <th class="py-3 px-6 text-left">Expires</th>
        <th class="py-3 px-6 text-center">Actions</th>
      </tr>
      </thead>
      <tbody class="text-gray-600 text-sm">
      <% @subscriptions.each do |subscription| %>
        <tr class="border-b border-gray-200 hover:bg-gray-50">
          <td class="py-3 px-6 text-left"><%= subscription.id %></td>
          <td class="py-3 px-6 text-left">
            <%= subscription.user.email_address %>
            <% if subscription.user.subscription_status == 'grace' %>
              <span class="bg-yellow-200 text-yellow-800 py-1 px-2 rounded-full text-xs ml-2">Grace</span>
            <% end %>
          </td>
          <td class="py-3 px-6 text-left"><%= subscription.plan_name.capitalize %></td>
          <td class="py-3 px-6 text-left">
              <span class="<%= subscription.active? ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %> py-1 px-3 rounded-full text-xs">
                <%= subscription.status.capitalize %>
              </span>
          </td>
          <td class="py-3 px-6 text-left"><%= subscription.started_at&.strftime("%b %d, %Y") %></td>
          <td class="py-3 px-6 text-left"><%= subscription.expires_at&.strftime("%b %d, %Y") %></td>
          <td class="py-3 px-6 text-center">
            <%= link_to "View", admin_subscription_path(subscription), class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <%# Add pagination here if using Pagy or similar %>
  </div>
</div>