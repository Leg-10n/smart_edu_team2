<div class="flex min-h-screen items-center justify-center bg-gray-100 px-4 py-10">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md space-y-6"> <!-- Changed to space-y-6 for consistent spacing -->
    <h1 class="text-2xl font-bold text-center">
      <%= render "shared/logo_text" %> Sign In
    </h1>

    <% if flash[:alert] %>
      <div class="bg-red-100 text-red-700 p-4 rounded mb-6"> <!-- Added mb-6 -->
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="bg-green-100 text-green-700 p-4 rounded mb-6"> <!-- Added mb-6 -->
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_with(url: session_path, html: { autocomplete: "on" }) do |form| %>
      <div class="space-y-4"> <!-- Reduced from space-y-6 to space-y-4 for tighter form field spacing -->
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email", value: params[:email_address], class: "w-full px-4 py-3 border rounded-lg focus:ring focus:ring-primary-300" %>

        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", class: "w-full px-4 py-3 border rounded-lg focus:ring focus:ring-primary-300" %>
      </div>

      <div class="mt-6"> <!-- Changed from mt-8 to mt-6 for consistency -->
        <%= form.submit "Sign In", class: "w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition font-semibold" %>
      </div>
    <% end %>

    <div class="text-center text-gray-600 my-6"> <!-- Changed from mt-10 to my-6 for consistency -->
      or
    </div>

    <div>
      <%= link_to "Sign up", new_signup_path, method: :get, class: "block text-center w-full bg-gray-200 py-3 rounded-lg hover:bg-gray-300 transition font-semibold" %>
    </div>

    <div class="text-center mt-6"> <!-- Changed from mt-8 to mt-6 for consistency -->
      <%= link_to "Forgot password?", new_password_path, class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>