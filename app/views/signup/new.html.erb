<div class="flex min-h-screen items-center justify-center bg-gray-100 px-4 py-10">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md space-y-6">
    <h1 class="text-2xl font-bold text-center">
      <%= render "shared/logo_text" %> Sign Up
    </h1>

    <% if @user.errors.any? %>
      <div class="bg-red-100 text-red-700 p-4 rounded mb-6">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @user, url: signup_index_path, html: { autocomplete: "on" }) do |form| %>
      <div class="space-y-4">
        <%= form.text_field :first_name, required: true, placeholder: "First Name", class: "w-full px-4 py-3 border rounded-lg focus:ring focus:ring-primary-300" %>

        <%= form.text_field :last_name, required: true, placeholder: "Last Name", class: "w-full px-4 py-3 border rounded-lg focus:ring focus:ring-primary-300" %>

        <%= form.email_field :email_address, required: true, autocomplete: "username", placeholder: "Email Address", class: "w-full px-4 py-3 border rounded-lg focus:ring focus:ring-primary-300" %>

        <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Password", class: "w-full px-4 py-3 border rounded-lg focus:ring focus:ring-primary-300" %>

        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm Password", class: "w-full px-4 py-3 border rounded-lg focus:ring focus:ring-primary-300" %>
      </div>

      <div class="mt-6">
        <%= form.submit "Sign Up", class: "w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition font-semibold" %>
      </div>
    <% end %>

    <div class="text-center text-gray-600 my-6">or</div>

    <div>
      <%= link_to "Sign in", new_session_path, class: "block text-center w-full bg-gray-200 py-3 rounded-lg hover:bg-gray-300 transition font-semibold" %>
    </div>
  </div>
</div>
