<% content_for :title, "Manage Users" %>
<div class="flex flex-col items-center">
  <h1 class="text-3xl font-bold mb-4">Manage Users</h1>

  <table class="table-auto w-full max-w-4xl mb-4">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2">Email</th>
        <th class="px-4 py-2">Role</th>
        <th class="px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="border-b">
          <td class="px-4 py-2"><%= user.email_address %></td>
          <td class="px-4 py-2"><%= user.role %></td>
          <td class="px-4 py-2">
            <%= link_to 'Edit Role', edit_user_path(user), class: "text-blue-500 hover:text-blue-700" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
