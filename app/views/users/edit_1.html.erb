<% content_for :title, "Edit User Role" %>
<pre>
Form action: <%= user_path(@user) %>
HTTP method: POST with _method=PATCH
</pre>
<div class="flex justify-center items-center min-h-[calc(100vh-64px)]">
  <div class="max-w-md w-full bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Edit Role for <%= @user.email_address %></h2>

    <%= form_with(model: @user, local: true, method: :patch, class: "space-y-4") do |form| %>
        <div class="field mb-4">
          <%= form.label :email_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :email_address, disabled: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-100" %>
        </div>
      
        <div class="field mb-4">
          <%= form.label :role, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :role, User::ROLES, { selected: @user.role }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" } %>
        </div>
      
        <div class="actions">
          <%= form.submit "Save Changes", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
    <% end %>
  </div>
</div>